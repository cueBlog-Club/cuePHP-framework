{
    "name": "solatyolo/lightioc",
    "type": "library",
    "description": "a light weight log lib",
    "keywords": [
        "psr-11",
        "di",
        "container",
        "ioc"
    ],
    "license": "MIT",
    "homepage": "https://github.com/SolaTyolo/lightioc",
    "autoload": {
        "psr-4": {
            "SolaTyolo\\Lightioc\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "SolaTyolo\\Tests\\": "tests/"
        }
    },
    "require": {
        "php": "^7.2 || ^8.0",
        "psr/container": "^2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^8.0 || ^9.0",
        "phpstan/phpstan": "^0.12.99",
        "squizlabs/php_codesniffer": "^3.6"
    },
    "provide": {
        "psr/container-implementation": "^1.0"
    },
    "scripts": {
        "test": [
            "phpstan analyse",
            "phpunit"
        ]
    }
}