{
    "name": "cuephp/cache",
    "type": "library",
    "description": "a light weight cache lib",
    "keywords": [ "psr-16", "cache", "memcached","redis","file"],
    "license": "MIT",
    "version": "0.1.0",
    "autoload": {
        "psr-4": {
            "CuePhp\\Cache\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CuePhp\\Tests\\Cache\\": "tests/"
        }
    },
    "require": {
        "php": "^7.3||^8.0",
        "psr/simple-cache": "^1.0||^2.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "*",
        "phpstan/phpstan": "^1.2",
        "phpunit/phpunit": "^9.5" 
    },
    "suggest": {
        "ext-redis": "use the phpredis client",
        "ext-memcached": "use the memcached client",
        "ext-yac": "use yac cache server"
    },
    "provide": {
        "psr/log": "1.1||3.0",
        "psr/simple-cache-implementation": "1.0||2.0"
    },
    "scripts": {
        "fix":  [
            "./vendor/bin/phpcbf --standard=PSR2 src"
        ],
        "analyse": [
            "./vendor/bin/phpstan analyse src"
        ],
        "unit-test": [
            "./vendor/bin/phpunit --coverage-clover=coverage.xml"
        ]
    }
}
