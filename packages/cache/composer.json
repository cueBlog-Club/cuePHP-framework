{
    "name": "cuephp/cache",
    "type": "library",
    "description": "a light weight cache lib",
    "keywords": [ "psr-16", "cache", "memcache","redis","file"],
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "CuePhp\\Cache\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "CuePhp\\Tests\\Cache\\": "tests/"
        }
    },
    "require": {
        "php": "^7.1|^8.0",
        "psr/cache": "^1.0|^2.0",
        "psr/simple-cache": "^1.0|^2.0"
    },
    "require-dev": {
        "squizlabs/php_codesniffer": "*",
        "phpstan/phpstan": "^1.2",
        "phpunit/phpunit": "^9.5" 
    },
    "suggest": {
        "ext-redis": "use the phpredis client",
        "ext-memcache": "use the memcached client"
    },
    "provide": {
        "psr/cache-implementation": "1.0|2.0",
        "psr/simple-cache-implementation": "1.0|2.0"
    },
    "scripts": {
        "fix":  [
            "./vendor/bin/phpcbf --standard=PSR2 src"
        ],
        "analyse": [
            "./vendor/bin/phpstan analyse src"
        ],
        "unit-test": [
            "./vendor/bin/phpunit"
        ]
    }
}
